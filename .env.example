# Anthropic API key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API key for speech-to-text and text-to-speech
OPENAI_API_KEY=your_openai_api_key_here

# Path to Google OAuth credentials JSON file
GOOGLE_CREDENTIALS_PATH=/path/to/your/credentials.json

# WebSocket authentication token (optional)
# If set, clients must provide this token to connect to WebSocket endpoints
# Leave empty to disable authentication (for demo mode)
WEBSOCKET_AUTH_TOKEN=
